---
import Header from '@/components/Header.astro'
import '@/styles/global.css'

interface Props {
  title: string
  sticky?: boolean
}

const { title, sticky } = Astro.props
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <Header sticky={sticky} />
    <main>
      <slot />
    </main>
  </body>
</html>
