---
import '@/styles/manrope.css'
import 'tailwindcss/tailwind.css'
import Sidebar from '@/components/admin/Sidebar.astro'
import BaseLayout from './BaseLayout.astro'
---

<BaseLayout class="font-manrope" title="CMS">
  <link
    slot="head"
    rel="preload"
    href="/fonts/manrope.woff2"
    as="font"
    type="font/woff2"
    crossorigin
  />
  <Sidebar />
  <main class="p-5 sm:ml-60">
    <slot />
  </main>
</BaseLayout>
