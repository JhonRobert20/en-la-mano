---
import { marked } from 'marked'
import db from '@/db'
import SiteLayout from '@/layouts/SiteLayout.astro'
import Hero from '@/components/Hero.astro'

const promotions = db.get<string[]>('promociones')!
const data = promotions.find(([, id]) => id.slice(0, -5) === Astro.params.id)

if (!data) return new Response(null, { status: 404, statusText: 'Not found' })
---

<SiteLayout>
  <Hero label={data[0]} image={data[1]} />
  <article
    class:list={[
      'my-18 px-5 font-light text-center leading-tight sm:px-10 lg:px-20',
      'xl:px-25'
    ]}
    set:html={marked.parse(data[2], { breaks: true })}
  />
</SiteLayout>

<style>
  article {
    p {
      margin-block: 1.25rem;
    }

    img {
      border-radius: 1.5rem;
      margin-block: 4.5rem;
      width: 100%;
    }
  }
</style>
