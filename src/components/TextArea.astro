---
interface Props {
  class?: string
  rows?: number
  placeholder: string
}

const { class: className, rows, placeholder } = Astro.props
---

<textarea
  class:list={[
    'w-full py-2 px-5 resize-none bg-transparent border border-primary',
    'rounded-3xl text-xs outline-primary',
    className
  ]}
  rows={rows ?? 4}
  placeholder={placeholder}
>
</textarea>
