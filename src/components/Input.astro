---
interface Props {
  class?: string
  type: 'text' | 'number' | 'email' | 'password'
  name?: string
  placeholder: string
}

const { class: className, type, name, placeholder } = Astro.props
---

<input
  class:list={[
    className,
    'w-full h-10 px-5 bg-transparent border rounded-full text-xs',
    'border-primary outline-warning'
  ]}
  type={type}
  name={name}
  placeholder={placeholder}
/>
