---
import getVideoId from 'get-video-id'
import db from '@/db'

const video = db.get<string>('video', false)!
const { id, service } = getVideoId(video)

let src = ''

if (service === 'youtube') src = `https://www.youtube.com/embed/${id}`
if (service === 'vimeo') src = `https://player.vimeo.com/video/${id}`
---

<iframe
  class="mx-auto max-w-full aspect-video h-auto rounded-3xl"
  src={src}
  width="740"
  height="416"
  allow="fullscreen"
  loading="lazy"></iframe>
