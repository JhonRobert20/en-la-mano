---
import { inferRemoteSize } from 'astro:assets'

const { width, height } = await inferRemoteSize(
  `${Astro.url.origin}/assets/logo.webp`
)
---

<figure class="w-auto h-11 bg-contain bg-no-repeat scroll-lighten xl:h-12">
</figure>

<style define:vars={{ width, height }}>
  figure {
    aspect-ratio: var(--width) / var(--height);
    background-image: url(/assets/logo.webp);
  }
</style>
