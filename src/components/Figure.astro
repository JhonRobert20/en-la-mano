---
import light from '@/assets/logo/light.webp'

interface Props {
  src: string
  width: number
  height: number
}

const { src, width, height } = Astro.props
---

<figure></figure>

<style
  define:vars={{
    logo: `url(${src})`,
    width: `${width}px`,
    height: `${height}px`,
    'logo-light': `url(${light.src})`
  }}
>
  figure {
    animation: lighten linear both;
    animation-range: 0 48px;
    animation-timeline: scroll();
    background-image: var(--logo);
    height: var(--height);
    width: var(--width);
  }

  @keyframes lighten {
    to {
      background-image: var(--logo-light);
    }
  }
</style>
