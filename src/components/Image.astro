---
import { inferRemoteSize } from 'astro:assets'

interface Props {
  class?: string
  src: string
}

const { class: className, src } = Astro.props
const { width, height } = await inferRemoteSize(`${Astro.url.origin}${src}`)
---

<img
  class={className}
  src={src}
  alt=""
  width={width}
  height={height}
  loading="lazy"
/>
